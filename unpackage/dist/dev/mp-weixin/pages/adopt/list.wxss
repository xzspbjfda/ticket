page {
  background: #F5F5F5;
}
page .wrap .slot-wrap {
  display: flex;
  align-items: center;
  /* flex: 1; */
  padding: 0 30rpx;
}
page .wrap .slot-wrap .city {
  max-width: 150rpx;
  color: #666;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
page .wrap .sticky {
  background: #FFF;
  position: -webkit-sticky;
  position: sticky;
  top: 0px;
  display: flex;
  align-items: center;
  z-index: 999;
  padding: 0 30rpx;
}
page .wrap .sticky .sticky-tabs {
  width: 65%;
}
page .wrap .sticky .sticky-filter {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  font-size: 24rpx;
  background: #FFF;
  text-align: center;
}
page .wrap .sticky .sticky-filter image {
  width: 24rpx;
  height: 26rpx;
  margin-left: 5rpx;
  vertical-align: middle;
}
page .wrap .sticky .sticky-post {
  flex-grow: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #FFF;
  color: #999;
  font-size: 24rpx;
}
page .wrap .filter {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 10000;
}
page .wrap .filter .filter-layer {
  width: 100%;
  height: 100%;
  background: #000;
  position: absolute;
  opacity: 0.5;
  z-index: 10001;
}
page .wrap .filter .filter-wrap {
  width: 100%;
  background: #FFF;
  border-top: 2rpx #F1F1F1 solid;
  border-bottom: 2rpx #F1F1F1 solid;
  position: relative;
  opacity: 1;
  z-index: 10002;
}
page .wrap .filter .filter-wrap .filter-title {
  color: #999;
  font-size: 26rpx;
  padding: 0 30rpx;
}
page .wrap .filter .filter-wrap .filter-subwrap {
  flex-wrap: wrap;
  padding: 0 30rpx;
  margin-top: 10rpx;
}
page .wrap .filter .filter-wrap .filter-subwrap button {
  width: 20%;
  height: 50rpx;
  line-height: 50rpx;
  color: #666;
  font-size: 26rpx;
  background: #F6F7FB;
  border-radius: 6rpx;
  margin: 0 30rpx 10rpx 0;
  display: inline-block;
}
page .wrap .filter .filter-wrap .filter-subwrap button:after {
  border: 0;
}
page .wrap .filter .filter-wrap .filter-subwrap .hover {
  background: #FFCE0C;
}
page .wrap .filter .filter-wrap .filter-subwrap02 {
  height: 80rpx;
  border-top: #F1F1F1 1px solid;
  display: flex;
  justify-content: space-around;
  text-align: center;
  margin-top: 30rpx;
}
page .wrap .filter .filter-wrap .filter-subwrap02 .filter-reset {
  width: 50%;
  line-height: 80rpx;
  color: #999;
  font-size: 14px;
}
page .wrap .filter .filter-wrap .filter-subwrap02 .filter-confirm {
  width: 50%;
  line-height: 80rpx;
  background: #FFCE0C;
  color: #FFF;
  font-size: 14px;
}
