.item {
  background: #FFF;
  border-radius: 8px;
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx;
  margin: 30rpx 30rpx 0;
}
.item .left {
  flex-basis: 33%;
}
.item .right {
  width: 67%;
  padding: 0 24rpx;
}
.item .right .title {
  font-size: 30rpx;
}
.item .right .cate {
  margin-top: 20rpx;
}
.item .right .cate .tag {
  height: 38rpx;
  line-height: 38rpx;
  background: #FFF;
  color: #CCC;
  font-size: 24rpx;
  border: 2rpx #CCC solid;
  border-radius: 10rpx;
  padding: 0 20rpx;
  text-align: center;
  display: inline-block;
}
.item .right .summary {
  color: #666;
  font-size: 24rpx;
  margin-top: 16rpx;
}
.item .bottom {
  flex-basis: 100%;
  margin-top: 20rpx;
}
.item .bottom .meta {
  color: #999;
  font-size: 22rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item .bottom .meta .datetime {
  font-size: inherit;
}
.item .bottom .meta .view {
  font-size: inherit;
  padding: 0 10rpx;
}
.item .bottom .meta .share {
  font-size: inherit;
}
.item .bottom .option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
