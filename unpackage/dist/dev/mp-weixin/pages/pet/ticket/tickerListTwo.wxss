.Listbox {
  padding-top: 10rpx;
  height: 80vh;
  overflow: hidden;
}
.colorccc {
  color: #8c8c8c;
}
.flex1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex2 {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
